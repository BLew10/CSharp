@{
    ViewData["Title"] = "Home Page";
}
@model User

<div class="text-center">
    <form asp-action="Create" asp-controller="Survey" method="post" class="p-3 border-2 [&>*]:flex [&>*]:justify-between  [&>*]:my-3 ">
        <div>
            <span asp-validation-for="Name"></span>
            <label asp-for="Name">Name: </label><input type="text" asp-for="Name" class="border-2 w-1/2 border-black">
        </div>
        <div>
            <span asp-validation-for="Location"></span>
            <label asp-for="Location">Location: </label>
            <select asp-for="Location" class=" border-2 w-1/2 border-black rounded">
                <option value="San Jose">San Jose</option>
                <option value="Remote">Remote</option>
            </select>
        </div>
        <div>
            <span asp-validation-for="FavLang"></span>
            <label asp-for="FavLang">Favorite Language</label><select asp-for="FavLang"
                class=" border-2 w-1/2 border-black rounded">
                <option value="C#">C#</option>
                <option value="Javascript">Javascript</option>
                <option value="Python">Python</option>
            </select>
        </div>
        <div>
            <span asp-validation-for="Comment"></span>
            <label asp-for="Comment">Comment (optional): </label>
            <textarea asp-for="Comment" id="" cols="50" rows="5" class="border-2 border-black"></textarea>
        </div>
        <button class="p-3 border-2 w-1/2 border-black rounded">Submit</button>
    </form>
</div>
