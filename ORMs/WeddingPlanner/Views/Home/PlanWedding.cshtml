@model Wedding

<div class="text-center ">
    <h1 class>Plan a Wedding</h1>
    <form asp-action="CreateWedding" class="w-full [&>*]:flex [&>*]:justify-between ">

        <span asp-validation-for="WedderOne"></span>
        <div>
            <label>Wedder One:</label>
            <input type="text" asp-for="WedderOne" class="border-2 border-slate-300 rounded ">
        </div>

        <span asp-validation-for="WedderTwo"></span>
        <div>
            <label>Wedder Two:</label>
            <input type="text" asp-for="WedderTwo" class="border-2 border-slate-300 rounded ">
        </div>

        <span asp-validation-for="Date"></span>
        <div>
            <label>Date: </label>
            <input type="date" asp-for="Date" class="border-2 border-slate-300 rounded ">
        </div>

        <span asp-validation-for="Address"></span>
        <div>
            <label>Address: </label>
            <input type="text" asp-for="Address" class="border-2 border-slate-300 rounded ">
        </div>
        <input type="hidden" asp-for="Creator" value='@Context.Session.GetInt32("UserId")' >
        <button>Create</button>
    </form>
</div>