<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRUDelicious</title>
  <script src='https://cdn.tailwindcss.com'></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CRUDelicious.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="flex justify-around w-1/2">
       <div>
        <a asp-controller="Home" asp-action="CreateDishForm">Create A Dish</a>
       </div>
       <div>
        <a asp-controller="Home" asp-action="CreateChefForm">Add a Chef</a>
       </div>
       <div>
        <a asp-controller="Home" asp-action="AllDishes">All Dishes</a>
       </div>
       <div>
        <a asp-controller="Home" asp-action="AllChefs">All Chefs</a>
       </div>
     
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - CRUDelicious - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
   
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
