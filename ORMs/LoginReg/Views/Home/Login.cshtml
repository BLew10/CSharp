@{
    ViewData["Title"] = "Home Page";
}
@model User

<div class="text-center ">
    <h1 class>Register</h1>
    <form asp-action="Register" class="w-full [&>*]:flex [&>*]:justify-between ">

        <span asp-validation-for="FirstName"></span>
        <div>
            <label>First Name:</label>
            <input type="text" asp-for="FirstName" class="border-2 border-slate-300 rounded ">
        </div>

        <span asp-validation-for="LastName"></span>
        <div>
            <label>Last Name:</label>
            <input type="text" asp-for="LastName" class="border-2 border-slate-300 rounded ">
        </div>

        <span asp-validation-for="Email"></span>
        <div>
            <label>Email: </label>
            <input type="email" asp-for="Email" class="border-2 border-slate-300 rounded ">
        </div>

        <span asp-validation-for="Password"></span>
        <div>
            <label>Password: </label>
            <input type="text" asp-for="Password" class="border-2 border-slate-300 rounded ">
        </div>

        <span asp-validation-for="PasswordConfirm"></span>
        <div>
            <label>Confirm Password:</label>
            <input type="text" asp-for="PasswordConfirm" class="border-2 border-slate-300 rounded ">
        </div>
        <button>Submit</button>
    </form>
</div>