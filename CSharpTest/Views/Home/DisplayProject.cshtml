@model Project

<h1  class="text-center text-2xl font-semibold">@Model.Title</h1>
<p class="text-center">@Model.Description</p>


<div class="flex justify-between w-3/4 mx-auto">
    <div class="flex flex-col [&>*]:my-3">
        <div>
            <p>Funded: US $@Model.Total</p>
            <p>Pledged of US $@Model.Goal</p>
        </div>
        <div>
            <p>@Model.Supporters</p>
            <p>Supporters</p>
        </div>
        <p>Ends: @ViewBag.TimeTil</p>
    </div>

    <div>
        <h1>Support this Project</h1>
        <form action="/project/@Model.ProjectId/update" method="post">
            <input type="number" asp-for="Total" min=1 value=0>
            <input type="submit" value="Support!">
        </form>
    </div>
</div>
